<script>
  // JavaScript для переключения слайдов
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.querySelector('.custom-dropdown-toggle');
    const dropdownMenu = document.querySelector('.custom-dropdown-menu');
    const slides = document.querySelectorAll('.slider-image');
    const texts = document.querySelectorAll('#text-slider .benefit-block');
    let currentSlide = 0;

    setInterval(() => {
      // Скрыть текущий слайд и текст
      slides[currentSlide].style.opacity = '0';
      texts[currentSlide].style.display = 'none';

      // Переключиться на следующий
      currentSlide = (currentSlide + 1) % slides.length;

      // Показать следующий слайд и текст
      slides[currentSlide].style.opacity = '1';
      texts[currentSlide].style.display = 'block';
    }, 3000); // Интервал 3 секунды


    // Получите данные breadcrumbs
    const breadcrumbDataRaw = "{{ breadcrumbs|json_encode|e('js') }}";
    let breadcrumbData;

    try {
      breadcrumbData = JSON.parse(breadcrumbDataRaw);
    } catch (error) {
      console.error('Ошибка парсинга JSON:', error);
      return;
    }

    // Обработчик клика на кнопке
    toggleButton.addEventListener('click', (e) => {
      console.log("Кнопка была нажата.");

      // Очистить текущее содержимое меню
      dropdownMenu.innerHTML = '';
      console.log("Содержимое меню очищено.");

      // Добавить элементы меню из данных
      if (breadcrumbData && breadcrumbData.length > 0) {
        console.log("Добавляем элементы из breadcrumbData.");
        breadcrumbData.forEach((item) => {
          console.log("Добавление элемента:", item);
          const listItem = document.createElement('li');
          listItem.className = 'custom-dropdown-item';
          listItem.innerHTML = `<a href="${item.href}">${item.text}</a>`;
          dropdownMenu.appendChild(listItem);
        });
      } else {
        console.warn("Данные breadcrumbData пусты или отсутствуют.");
        const emptyItem = document.createElement('li');
        emptyItem.className = 'custom-dropdown-item';
        emptyItem.textContent = 'Нет категорий';
        dropdownMenu.appendChild(emptyItem);
      }

      // Показать или скрыть меню
      if (dropdownMenu.style.display === 'block') {
        console.log("Скрываем меню.");
        dropdownMenu.style.display = 'none'; // Скрыть меню
      } else {
        console.log("Отображаем меню.");
        dropdownMenu.style.display = 'block'; // Показать меню
      }

      e.stopPropagation(); // Остановить всплытие события
    });

    // Закрыть меню при клике вне его области
    document.addEventListener('click', (e) => {
      console.log("Клик за пределами меню. Скрываем меню.");
      dropdownMenu.style.display = 'none';
    });
  });
</script>



