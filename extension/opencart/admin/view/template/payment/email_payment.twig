<div class="form-group">
  <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
  <div class="col-sm-10">
      <select name="payment_email_payment_status" id="input-status" class="form-control">
          <option value="1" {{ payment_email_payment_status == '1' ? 'selected' : '' }}>{{ text_enabled }}</option>
          <option value="0" {{ payment_email_payment_status == '0' ? 'selected' : '' }}>{{ text_disabled }}</option>
      </select>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
  <div class="col-sm-10">
      <input type="text" name="payment_email_payment_sort_order" value="{{ payment_email_payment_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
  </div>
</div>
